
@{
    Layout = null;
    Models.students stu = ViewBag.student;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>
    <div>
        <form method="post" action="/Student/Edit">
            <table>
                <tr>
                    <td>姓名</td>
                    <td>
                        <input name="id" type="hidden" value="@stu.id" />
                        <input name="name" type="text" value="@stu.name"/>
                    </td>
                </tr>
                <tr>
                    <td>年龄</td>
                    <td><input name="age" type="text" value="@stu.age"/></td>
                </tr>
                <tr>
                    <td>部门</td>
                    <td>
                        <select name="class_id">
                            @foreach (var item in ViewBag.classes)
                            {
                                if (stu.class_id == item.id)
                                {
                                    <option value="@item.id" selected="selected">@item.name</option>
                                }
                                else
                                {
                                    <option value="@item.id">@item.name</option>
                                }

                            }


                        </select>

                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input id="Submit1" type="submit" value="保存" />


                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
